{{navigation-bar}}

<div class="row">

  <!-- Procedure list -->
  <div class="col-sm-3 col-md-2 sidebar">
    {{input class="form-control" placeholder="Buscar..." value=nameOrDescription }}
    <hr>
    <button class="btn btn-success" {{action "createProcedure"}}>Crear nuevo</button>
    <ul class="nav nav-sidebar">
      {{#each procedure in filteredProcedures }}
        <li>{{#link-to 'procedures.view' procedure}}{{procedure.name}}{{/link-to}}</li>
      {{else}}
        <li>No procedures found</li>
      {{/each}}
    </ul>
  </div>

  <!-- Procedure content -->
  <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      {{outlet}}
  </div>

</div>