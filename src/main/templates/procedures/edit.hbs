<h1 class="page-header">{{input class="form-control" placeholder="procedure name" value=model.name}}</h1>

<div class="row">
  <div class="col-md-6">
    {{textarea class="description_edit form-control" placeholder="description" value=model.description}}
  </div>
  <div class="col-md-6">
    {{markdown-view value=model.description}}
  </div>
</div>

<h2 class="sub-header">Acciones</h2>
<button class="btn btn-success" {{action "saveProcedure" }}>Guardar</button>
<button class="btn btn-default" {{action "cancelEdition" }}>Cancelar</button>
<button class="btn btn-danger" {{action "deleteProcedure" model}}>Borrar</button>